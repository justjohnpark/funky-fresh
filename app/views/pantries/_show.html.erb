<div class="pantry-nav">
  <% if @user.id == @pantry.creator_id %>
    <button class="edit_pantry_button" id="edit_pantry_button<%= @pantry.id%>">Edit Pantry</button>
    <button class="cancel_edit_pantry_button" id="cancel_edit_pantry_button<%= @pantry.id%>">Cancel Form</button>

    <%= render '/pantries/edit_pantry', locals: { :pantry => @pantry, :user => User.find(session[:user_id])} %>
  <% end %>
    <%= button_to "Get Recipes", user_pantry_recipes_path(@user, @pantry), method: :get %>
    <button class="new_invite_button" id="new_invite_button<%=@pantry.id%>">Invite</button>
    <button class="cancel_new_invite_button" id="cancel_new_invite_button<%=@pantry.id%>">Cancel</button>
    <%= render '/invites/new_invite', locals: { :pantry => @pantry }  %> <br>
    <%= render 'layouts/search', locals: { :pantry => @pantry }  %>
    <div class="search-results"> </div>
  <div class="new-item-create">
    <button class="new_item_button" id="new_item_button<%= @pantry.id%>">New Item</button>
    <button class="cancel_new_item_button" id="cancel_new_item_button<%= @pantry.id%>">Cancel Form</button>

    <%= render '/items/new_item', locals: { :pantry => @pantry, :user => User.find(session[:user_id]) } %>
  </div>
</div>

<table class="pantry_table">
  <thead class="pantry_head">
    <tr>
      <th>Item Name</th>
      <th>Expiration Date</th>
      <th>Remove Item</th>
    </tr>
  </thead>

 <tbody id="item-block<%= @pantry.id %>">

  <% if @pantry %>
    <%= render '/items/item', locals: { :pantry => @pantry, :user => User.find(session[:user_id])} %>
  <% end %>
 </tbody>
</table>



