<%= render "layouts/logged_in_header" %>

<table>
  <tr>
    <th>Item Name</th>
    <th>Expiration Date</th>
    <th>Location</th>
  </tr>

  <% if @pantry %>
    <% @pantry.items.each do |item| %>
      <tr>
          <td><%= item.prototype.name %></td>
          <td><%= item.expiration_date %></td>
          <td><%= link_to 'Edit Item', edit_user_pantry_item_path(@user, @pantry, item) %></td>
          <td><%= link_to 'Destroy Item', user_pantry_item_path(@user, @pantry, item), remote: true, method: :delete, :class => "item-delete" %></td>
      </tr>
    <% end %>
  <% end %>
</table>


<%= link_to 'New Item', new_user_pantry_item_path(@user, @pantry, Item.new) %>
