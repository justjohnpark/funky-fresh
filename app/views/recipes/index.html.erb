<% if @best_matches %>
<% @best_matches.each do |match| %>
<% recipe = Yummly.find(match.first)%>
<a href="<%= recipe.attribution.url %>"><p><%= recipe.name%></p></a>
<% if recipe.thumbnail %>
    <a href="<%= recipe.attribution.url %>"><img src="<%= recipe.thumbnail %>"></a>
<% end %><br>

<strong>ingredients</strong>: <%= recipe.ingredients.join(', ') %> <br>
<% you_have = [] %>
<% match[1].each do |ingredient| %>
<% @items.each do |item| %>
<%if ingredient.include?(item) %>
<% you_have << ingredient%>
<% end %>
<% end %>
<% end %>
<strong>you have</strong>: <%= you_have.join(', ') %> <br>
<strong>You are missing</strong>: <%= (match[1] - @items).join(', ') %> <br>
<strong>Rating</strong>: <%= recipe.rating %><br>
<strong>Source</strong>: <%= match.last%>  
<% end  %>
<% else %>
<h5> No recipes found</h5>
<% end %>
<br>
<br>

