<%= form_for :invite, :url => invites_path, method: :post, remote: true, :html => { :id => "new_invite#{@pantry.id}", :class => "new_invite" } do |f| %>
    <%= f.hidden_field :pantry_id, :value => @pantry.id %>
    <%= f.hidden_field :sender_id, :value => session[:user_id] %>
    <%= f.label :Invite %>
    <%= f.email_field :email %>
    <%= f.submit 'Send' %>
<% end %>


