<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, :required => true %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, :required => true %>
  </p>

  <p class="email-input-register">
    <%= f.label :email %><br>
    <%= f.text_field :email, :required => true, :pattern => '[\w.]+@\w+(\.\w{2,})+' %> <span class="email-input-notice"> </span>
  </p>

  <p class="password-input-register">
    <%= f.label :password %><br>
    <%= f.password_field :password, :required => true %> <span class="password-input-notice"> </span>
  </p>

   <p>
    <%= f.label :Confirm_password %><br>
    <%= f.password_field :password_confirmation, :required => true %>
  </p>

  <% if @token != nil %>
    <%= hidden_field_tag :invite_token, @token %>
  <% end %>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<script>
$(document).ready(function($) {
    $("input#user_password").tipsy({gravity: 'w', fade: true, trigger: 'focus', fallback: "Use at least 6 characters. Include both an upper and a lower case letter."})
  });
</script>
