

<%= form_tag '/login', :class => "login", :id => "login_form" do %>
  <h1>Login</h1>
    <p>
    <%= text_field_tag :email, nil, :placeholder => 'Email', :required => true %>
  </p>

  <p>
    <%= password_field_tag :password, nil, :placeholder => 'Password', :required => true %>
  <span class="password-notice"></span>
  </p>

  <p>
    <%= submit_tag "Login" %>
  </p>
  <p><%= link_to "forgot password?", new_password_reset_path, class: "reset_password" %></p>

  <% if flash[:error] %>
    <div class="notice"><%= flash[:error] %></div>
  <% end %>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<% end %>





